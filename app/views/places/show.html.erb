<!-- app/views/places/show.html.erb -->
<div class="container">
  <div class="overflow-auto bg-white">
    <h1 class="text-center p-1" style="font-size:48px;">
      <strong><u>
          <%=@place.name %>
        </strong></u>
    </h1>
    <div class="d-flex justify-content-center align-items-center">
      <% @bins.each do |bin|%>
        <% cate = bin.category %>
        <%= image_tag "pet_bottle.png", style: 'width: 20%;margin:5px;' if cate == "PET bottle" %>
        <%= image_tag "can.png",style: 'width: 20%;margin:5px;' if cate == "can"  %>
        <%= image_tag "glass.png",style: 'width: 20%;margin:5px;' if cate == "glass"  %>
        <%= image_tag "burnables.png", style: 'width: 20%;margin:5px;' if cate == "burnables"  %>
        <%= image_tag "non_burnables.png",style: 'width: 20%;margin:5px;' if cate == "non-burnables"  %>
        <%= image_tag "paper.png", style: 'width: 20%;margin:5px;' if cate == "paper"  %>
        <%= image_tag "plastic.png", style: 'width: 20%;margin:5px;' if cate == "plastic"  %>
      <% end %>
      <%= link_to new_place_trash_bin_path(@place), style: 'width: 20%;margin:5px;'  do %>
        <%= image_tag "add.png", class: "w-100" %>
      <% end %>
    </div>
    <div class="card-body d-flex justify-content-center p-1 mt-2">
      <% @place.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 300, crop: :fill %>
      <% end %>
    </div>
    <div class="d-flex card-text justify-content-center m-4">
      <h3>
        <%=@place.description %>
      </h3>
      <br>
    </div>
    <div class="row justify-content-center">
      <% if @bins.any? %>
        <a class="btn btn-flat-primary btn-lg m-3" style="width:70%;" href="<%= update_form_place_path(@place, bin_id: @bins.first.id) %>">
          <i class="fa-solid fa-compass"></i> Go
          <%= link_to(:back, class: "btn btn-flat-primary btn-lg m-3", style: "width:70%;") do %>
              Back to Map
          <% end %>
        </a>

      <% else %>
        <a class="btn btn-flat-primary btn-lg m-3" style="width:55%;" href="<%= root_path %>">
          <i class="fa-solid fa-compass"></i> Home
        </a>
      <% end %>
    </div>
  </div>
</div>
