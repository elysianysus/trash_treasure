<div class="container">
  <div class="overflow-auto bg-white">
    <h1 class="text-center p-1" style="font-size: 36px; font-weight: bold; text-decoration: none;">
      <%= place.name %>
    </h1>
    <div class="d-flex card-text justify-content-center m-4">
      <h3>
        <%= place.description %>
      </h3>
    </div>
    <div class="row justify-content-center">
      <a class="btn btn-flat-primary" style="width:40%; margin-right: 10px; font-weight: bold;" href="<%= update_form_place_path(place, bin_id: place.trash_bins.first.id) %>">
        Arrived
      </a>
      <%= link_to place_path(place), class: "btn btn-flat-secondary", style: "color: #618264; border: 2px solid #618264; width:40%; margin-left: 10px; font-weight: bold;" do %>
        More Info
      <% end %>
    </div>
  </div>
</div>
