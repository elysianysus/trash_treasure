<% if @no_bins_nearby %>
  <script>
    alert('Please note: Waste disposal facilities are not available within 10km radius.');
  </script>
<% end %>
<div class= "container">
  <!-- Bootstrap Spinner as the Loading Indicator -->
  <div class="text-center">
    <div id="loadingIndicator" class="loading-style" style="display: none;">
      <div class="spinner-grow text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
      <div class="spinner-grow text-secondary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
      <div class="spinner-grow text-success" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
  </div>
  <div id="map"
    style="width: 100%; height: 870px;"
    data-controller="map"
    data-no-bins-nearby-value="<%= @no_bins_nearby %>"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
